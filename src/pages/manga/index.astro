---
import { Repo } from "@/db/repo";

import { ROUTE } from "src/consts";
import Layout from "src/layouts/Layout.astro";

const repo = new Repo(Astro.locals.runtime.env.DB);

const mangaList = await repo.getAllMangas();
---

<Layout title="Manga List">
  <h1>Manga List</h1>
  <ul>
    {
      mangaList.map((manga) => (
        <li>
          <a href={ROUTE.MANGA(manga)}>{JSON.stringify(manga)}</a>
        </li>
      ))
    }
  </ul>
</Layout>
